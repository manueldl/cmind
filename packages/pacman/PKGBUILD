# Maintainer: Manuel Domínguez López <mdomlop at gmail dot com>

_pkgver_year=2017
_pkgver_month=04
_pkgver_day=04

_gitname=cmind
pkgname=${_gitname}-git
pkgver=41
pkgrel=1
pkgdesc="Guess the secret code! Use your master mind."
arch=('any')
url="https://github.com/manueldl/${_gitname}"
source=("git+https://github.com/manueldl/${_gitname}.git")
license=('GPL3')
makedepends=('git')
conflicts=(${_gitname})

md5sums=('SKIP')

pkgver() {
  cd ${srcdir}/${_gitname}
  git rev-list --count HEAD
}

build() {
    cd ${srcdir}/${_gitname}
    make
    }

package() {
    cd "${srcdir}/${_gitname}"
    make PREFIX=${pkgdir} install
}
